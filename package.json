{
  "private": true,
  "name": "@websummit/web-ui-design-system",
  "version": "0.0.1",
  "description": "",
  "homepage": "https://github.com/yordanlv/lerna-monorepo-github-actions-release",
  "bugs": {
    "url": "https://github.com/yordanlv/lerna-monorepo-github-actions-release/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yordanlv/lerna-monorepo-github-actions-release.git"
  },
  "license": "MIT",
  "author": "yordanlv",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "storybook": "NODE_ENV=development start-storybook -p 9001",
    "start": "npm-run-all --parallel storybook build:watch",
    "copy-ts": "copyfiles -u 3 packages/ui/src/**/*.d.ts packages/ui/dist/",
    "build": "lerna exec --parallel -- babel src -d dist --ignore **/*.test.js,**/*.stories.jsx && npm run copy-ts",
    "build:watch": "npm run build -- --watch",
    "bootstrap": "lerna bootstrap",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "versionup": "lerna version --conventional-commits --no-git-tag-version",
    "versionup:patch": "lerna version patch --conventional-commits --no-git-tag-version",
    "versionup:minor": "lerna version minor --conventional-commits --no-git-tag-version",
    "versionup:major": "lerna version major --conventional-commits --no-git-tag-version",
    "postversionup": "npm run commit-version",
    "postversionup:patch": "npm run commit-version",
    "postversionup:minor": "npm run commit-version",
    "postversionup:major": "npm run commit-version",
    "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "release": "lerna publish from-package",
    "release:canary": "lerna publish --canary --preid next --dist-tag next --force-publish='*' --no-push --no-git-tag-version --yes"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-actions": "^6.0.0",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-storysource": "^6.3.8",
    "@storybook/react": "^6.0.0",
    "@types/jest": "27.0.1",
    "@types/node": "12.20.4",
    "@types/react-dom": "15.5.3",
    "@types/react": "16.14.15",
    "@types/styled-components": "^5.1.14",
    "all-contributors-cli": "^6.20.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.9.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint": "^7.32.0",
    "glob-loader": "^0.3.0",
    "jest-dom": "^4.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react-dom": "^17.0.2",
    "react-testing-library": "^5.4.4",
    "react": "^17.0.2",
    "styled-components": "^5.3.1",
    "styled-map": "^3.3.0",
    "tslint": "6.1.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "copyfiles": "^2.4.1"
  }
}
